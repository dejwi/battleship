{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "jest"
    ],
    "rules": {
        "import/prefer-default-export": "off",
        "prettier/prettier": ["error", { "singleQuote": true }],
        "no-plusplus": "off",
        "no-param-reassign": [2, { "props": false }],
        "no-use-before-define": ["error", {"functions": false, "classes": false}],
        "no-loop-func": "off",
        "no-else-return": "off"
    }
}
